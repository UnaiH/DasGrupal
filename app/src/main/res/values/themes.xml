<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TrabajoGrupal" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Menu" parent="Theme.AppCompat">
        <item name="android:title">#000000</item>
        <item name="android:textColor">#000000</item>
        <item name="android:background">#C2C2C2</item>
        <item name="android:statusBarColor" tools:targetApi="l">#555588</item>
        <item name="android:textSize">19dp</item>
        <item name="android:strokeColor">#000000</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Dark" parent="Theme.AppCompat">
        <item name="android:title">#FFFFFF</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">#202020</item>
        <item name="android:statusBarColor" tools:targetApi="l">#404040</item>
        <item name="colorPrimary">#000000</item>
        <item name="android:textSize">19dp</item>
        <item name="android:strokeColor">#000000</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Blue" parent="Theme.AppCompat">
        <item name="android:title">#FFFFFF</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">#4040A0</item>
        <item name="android:statusBarColor" tools:targetApi="l">#4040C0</item>
        <item name="colorPrimary">#000000</item>
        <item name="android:textSize">19dp</item>
        <item name="android:strokeColor">#000000</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Green" parent="Theme.AppCompat">
        <item name="android:title">#FFFFFF</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">#308030</item>
        <item name="android:statusBarColor" tools:targetApi="l">#109010</item>
        <item name="colorPrimary">#000000</item>
        <item name="android:textSize">19dp</item>
        <item name="android:textStyle">bold</item>
    </style>


</resources>